{
    "name": "misantron/dbunit",
    "description": "DbUnit fork supporting PHPUnit 9/10",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "database",
        "testing",
        "dbunit"
    ],
    "authors": [
        {
            "name": "Aleksandr Ivanov",
            "email": "misantron@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*",
        "phpunit/phpunit": "^9.5 || ^10.2 || ^11.4",
        "symfony/polyfill-php80": "^1.27",
        "symfony/yaml": "^5.4 || ^6.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "symplify/easy-coding-standard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "PHPUnit\\DbUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPUnit\\DbUnit\\Tests\\": "tests/"
        },
        "files": [
            "tests/_files/DatabaseTestUtility.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
